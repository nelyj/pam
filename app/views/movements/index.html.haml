=render('layouts/header')
.container
  .row
    .col-md-12
      .page-header
        .row
          .col-md-10
            %h1 Movimientos
          .col-md-2
            =link_to 'Nuevo Movimento', new_proyect_movement_path, class: 'btn btn-primary boton-side pull-irght'

      %table.table-condensed{'width' => '100%' }
        %tr
          %th Proyecto
          %th Monto Total
          


        - @movements.each do |movement|
          %tr
            %td= movement.ammount
            %td
            %td= link_to 'Show', movement
            %td= link_to 'Edit', edit_movement_path(movement)
            %td= link_to 'Destroy', movement, :method => :delete, :data => { :confirm => 'Are you sure?' }
