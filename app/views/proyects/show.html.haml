=render('layouts/header')

.container
  .row
    =render('layouts/menu')

    .col-md-9
      .page-header
        .row
          .col-md-10
            %h1=@proyect.name
          .col-md-2
            =link_to 'Volver Atras', proyects_path, class: 'btn pull-right boton-side'


      .col-md-12
        .col-md-9
          %h3 Movimientos
        .col-md-3
          =link_to 'Agregar Movimiento', new_proyect_movement_path(@proyect), class: 'btn btn-primary pull-right'

        -if @proyect.movements.count > 0
          %table.table-condensed{'width' => '100%' }
            %thead
              %tr
                %th NÂ° de informe
                %th Fecha Informe
                %th Rendido Beneficiario
                %th Rendido Innova
                %th Aprobado Beneficiario
                %th Aprobado Innova
            %tbody
              -@proyect.movements.each do |movimiento|
                %tr
                  %td=movimiento.fecha_informe
                  %td=movimiento.rendido_beneficiario
                  %td=movimiento.rendido_innova
                  %td=movimiento.aprobado_beneficiario
                  %td=movimiento.aprobado_innova

        -else
          =render 'vacio'

      .col-md-12
        .col-md-9
          %h3 Actividades
        .col-md-3
          =link_to 'Agregar Actividad', new_proyect_activity_path(@proyect), class: 'btn btn-primary pull-right'
        -if @proyect.activities.count > 0
          %table.table-condensed{'width' => '100%' }
            %thead
              %tr
                %th Titulo
                %th Descripcion       
            %tbody
              -@proyect.activities.each do |activity|
                %tr
                  %td=activity.title
                  %td=activity.description
        -else
          =render 'vacio'
